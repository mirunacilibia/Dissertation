<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/filter_buttons_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="2"
        android:paddingBottom="4dp"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/type_filter_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:padding="8dp"
            android:text="Type"
            android:textColor="@color/primary" />

        <Button
            android:id="@+id/condition_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Diagnosis"
            android:background="@drawable/button_border"
            android:textColor="@color/primary"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

    </LinearLayout>

    <!-- Scrollable notifications -->
    <ScrollView
        android:id="@+id/conditionDetails"
        android:layout_below="@+id/filter_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/conditionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:paddingBottom="120dp"/>
    </ScrollView>

    <!-- ðŸ”½ TOP FADE OVERLAY -->
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/filter_buttons_container"
        android:background="@drawable/top_fade" />

</RelativeLayout>
