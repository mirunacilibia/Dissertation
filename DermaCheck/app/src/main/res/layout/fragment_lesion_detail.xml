<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/infoSection"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detailToolbar"
            android:background="@color/primaryLight"
            android:titleTextColor="@color/onPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Lesion Details"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            />

        <!-- Location Text Section -->
        <TextView
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="Location:"
            android:background="@android:color/transparent"
            android:textColor="@color/textSecondary"
            android:paddingStart="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/locationText"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@android:color/transparent"
            android:textColor="@color/primaryDark"
            android:paddingStart="16dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Current diagnosis:"
                    android:textColor="@color/textSecondary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/diagnosisText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textColor="@color/primaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Learn More button -->
                <Button
                    android:id="@+id/learnMoreBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:textSize="10sp"
                    android:text="@string/learn_more_about_this_diagnosis"
                    android:textColor="@color/textSecondary"
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/statusPill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="6dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/status_pill_background"
                android:layout_gravity="center_vertical|end" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/historyText"
        android:layout_below="@id/infoSection"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="Lesion history:"
        android:background="@android:color/transparent"
        android:textColor="@color/textSecondary"
        android:paddingStart="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/historyScroll"
        android:layout_below="@+id/historyText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/historyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="120dp" />
    </ScrollView>

    <!-- ðŸ”½ TOP FADE OVERLAY -->
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/historyText"
        android:background="@drawable/top_fade" />

    </RelativeLayout>
    <!-- ðŸ”½ FAB pinned to bottom end -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="28dp"
        android:contentDescription="Add"
        android:src="@drawable/baseline_add_24"
        app:backgroundTint="@color/primary"
        app:tint="@android:color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="28dp"
        android:contentDescription="Delete"
        android:src="@drawable/baseline_delete_24"
        app:backgroundTint="@color/primary"
        app:tint="@android:color/white" />

</FrameLayout>
