<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_section_background">

    <ProgressBar
        android:id="@+id/loadingSpinner"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/accountScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Profile Image + Name + Email Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:clipToOutline="true"/>

            <!-- Name -->
            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/primaryDark"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/textPrimary"
                android:background="@drawable/status_pill_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <!-- Lesions Count Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_button_light"
            android:elevation="8dp"
            android:padding="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/lesionsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="@color/primaryDark"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/lesionsCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lesions added"
                android:textColor="@color/primaryDark"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/baseline_supervisor_account_24"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/updateProfileBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="0dp"
                    android:text="Update profile"
                    android:background="@android:color/transparent"
                    android:textColor="@color/primaryDark"
                    android:gravity="start" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    android:layout_gravity="center|end"
                    app:tint="@color/primaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/baseline_lock_24"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/changePasswordBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="0dp"
                    android:text="Change password"
                    android:background="@android:color/transparent"
                    android:textColor="@color/primaryDark"
                    android:gravity="start" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    android:layout_gravity="center|end"
                    app:tint="@color/primaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/baseline_logout_24"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/logoutBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Logout"
                    android:paddingStart="0dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/primaryDark"
                    android:gravity="start" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    android:layout_gravity="center|end"
                    app:tint="@color/primaryDark" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
