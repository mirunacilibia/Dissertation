<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:backgroundTint="@color/surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Left colored border -->
        <View
            android:id="@+id/left_border"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@color/primaryExtraLight" />

        <!-- Content section -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/condition_name"
                android:text="Condition name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/condition_type"
                android:text="Condition type"
                android:textColor="@color/textSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/condition_description"
                android:text="Condition description"
                android:layout_marginTop="8dp"
                android:textColor="@color/textPrimary"
                android:justificationMode="inter_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
