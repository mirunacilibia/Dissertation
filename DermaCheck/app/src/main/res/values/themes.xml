<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.DermaCheck" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Optional overrides for Material3 -->
    </style>

    <style name="Theme.DermaCheck" parent="Base.Theme.DermaCheck" />

    <style name="CustomRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/primary</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="Theme.LoginAndSignUp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryLight</item>
        <item name="colorOnSecondary">@color/onSecondary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDark</item>

        <!-- Backgrounds and surfaces -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onPrimary</item>
    </style>

    <!-- TextInput Layout outer style -->
    <style name="LoginTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/textSecondary</item>
    </style>

    <!-- TextInput EditText inner style -->
    <style name="LoginTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textSecondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SpinnerStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="Theme.DermaCheck.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DermaCheck.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DermaCheck.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
